@model BioForeignKit.Models.Diagnostics

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <a href="@Url.Action("Index","Diagnostics")" class="btn btn-warning" id="buttonWarning"><i class="fa fa-backward"></i>   Geri Dön</a>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="alert-icon shadow-reset wrap-alert-b">
                <div class="alert-title">
                    <h2></h2>
                </div>
                <div class="alert alert-info alert-st-two" role="alert">
                    <i class="fa fa-info-circle adminpro-inform admin-check-pro admin-check-pro-none" aria-hidden="true"></i>
                    <p class="message-mg-rt message-alert-none"><h4><strong>Tanı Sil</strong></h4><hr /> <h5>Seçili Öğeyi Silmek istediğinize emin misiniz?</h5></p>
                </div>

            </div>
            <div class="hpanel">
                <div class="panel-body">

                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayName("Tanı:")
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.DiagnosticName)
                            </dd>

                        </dl>

                        @using (Html.BeginForm("Delete", "Diagnostics", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Id)
                            <div class="form-actions no-color">
                                <input type="submit" value="Sil" class="btn btn-danger" /> 
                            </div>
                        }
                    </div>


                </div></div></div></div></div>
                  