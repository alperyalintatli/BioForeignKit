@model BioForeignKit.Models.Patients

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="col-lg-12">
        <a href="@Url.Action("Index", "Patients")" class="btn btn-warning"><i class="fa fa-backward"></i>  Geri Dön</a>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="alert-icon shadow-reset wrap-alert-b">
                    <div class="alert-title">
                        <h2></h2>
                    </div>
                    <div class="alert alert-info alert-st-two" role="alert">
                        <i class="fa fa-info-circle adminpro-inform admin-check-pro admin-check-pro-none" aria-hidden="true"></i>
                        <p class="message-mg-rt message-alert-none"><h4><strong>Hasta Sil</strong></h4><hr /> <h5>Seçili Öğeyi Silmek istediğinize emin misiniz?</h5></p>
                    </div>

                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayName("İsim:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Soyisim:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Surname)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Doğum Tarihi:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Birthdate)
                                </dd>



                                <dt>
                                    @Html.DisplayName("Tanı:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Diagnostics.DiagnosticName)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Cinsiyet:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Genders.GenderName)
                                </dd>

                                
                                <dt>
                                    @Html.DisplayName("Uyruk:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Nationalities.Nationality)
                                </dd>


                                <dt>
                                    @Html.DisplayName("Klinik Yorum:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ClinicComment)
                                </dd>

                                <dt>
                                    @Html.DisplayName("Doktor Yorumu:")
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DoctorComment)
                                </dd>




                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Sil" class="btn btn-danger" /> 

                                </div>
                            }
                        </div>

                    </div></div></div></div></div>


